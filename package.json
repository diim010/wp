{
  "name": "rfplugin",
  "version": "1.0.0",
  "description": "RoyalFoam WordPress Plugin - Enterprise product constructor and invoice system",
  "main": "rfplugin.php",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "build": "npm run build:css",
    "build:css": "tailwindcss -i ./assets/css/design-system.css -o ./assets/css/main.css --minify",
    "build:prod": "NODE_ENV=production npm run build:css",
    "dev": "npm run watch:css",
    "watch:css": "tailwindcss -i ./assets/css/design-system.css -o ./assets/css/main.css --watch",
    "lint:css": "stylelint 'assets/css/**/*.css' --fix"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/royalfoam/rfplugin.git"
  },
  "keywords": [
    "wordpress",
    "plugin",
    "product-constructor",
    "invoice-system",
    "rest-api",
    "react",
    "acf",
    "enterprise"
  ],
  "author": "RoyalFoam",
  "license": "GPL-2.0-or-later",
  "homepage": "https://royalfoam.com",
  "engines": {
    "php": ">=8.4",
    "wordpress": ">=6.0"
  },
  "dependencies": {
    "gsap": "^3.14.2"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.24",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.1"
  }
}
